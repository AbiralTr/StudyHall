<header class="topbar">
  {{#unless hideNav}}
    <button class="icon-btn" id="menuBtn" aria-label="Open menu" aria-expanded="false">
      <svg viewBox="0 0 24 24" aria-hidden="true">
        <path d="M4 6h16M4 12h16M4 18h16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  {{/unless}}

  <div class="brand">
    <a class="brand-title" style="text-decoration: none; color: white;" href="/home">StudyHall</a>
  </div>
</header>

{{#unless hideNav}}
  <div class="overlay" id="overlay" hidden></div>

  <aside class="drawer" id="drawer" aria-hidden="true">
    <div class="drawer-header">
      <div class="drawer-title">Menu</div>
      <button class="icon-btn" id="closeBtn" aria-label="Close menu">
        <svg viewBox="0 0 24 24" aria-hidden="true">
          <path d="M6 6l12 12M18 6L6 18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>

    <div class="drawer-nav">
      <a href="/friends" class="drawer-btn">Friends</a>
    </div>

    <div class="drawer-footer">
      <form id="logoutForm">
        <button class="btn btn-danger" type="submit">Log out</button>
      </form>
    </div>
  </aside>
{{/unless}}
